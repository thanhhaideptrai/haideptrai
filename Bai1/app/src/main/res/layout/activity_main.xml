<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:id="@+id/textView"
        android:layout_width="417dp"
        android:layout_height="31dp"
        android:layout_weight="1"
        android:background="#04524A"
        android:text="ThôngTinCáNhân"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Tên:" />

        <EditText
            android:id="@+id/txtHoTen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="46dp"
            android:ems="10"
            android:hint="@string/hoten"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CMND:" />

        <EditText
            android:id="@+id/txtCMND"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="@string/cmnd"
            android:inputType="textPersonName" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="410dp"
        android:layout_height="19dp"
        android:background="#2196F3"
        android:text="Bằng Cấp"
        android:textAlignment="center" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/group">

        <RadioButton
            android:id="@+id/tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung Cấp" />

        <RadioButton
            android:id="@+id/cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao Đẳng" />

        <RadioButton
            android:id="@+id/dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đại Học" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="410dp"
        android:layout_height="19dp"
        android:background="#2196F3"
        android:text="Sở Thích"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/docbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc báo" />

        <CheckBox
            android:id="@+id/docsach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc sách" />

        <CheckBox
            android:id="@+id/doccode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc coding" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="410dp"
        android:layout_height="19dp"
        android:background="#2196F3"
        android:text="Thông Tin Bổ Sung"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txtTTBS"
        android:layout_width="412dp"
        android:layout_height="178dp"
        android:layout_weight="3"
        android:ems="10"
        android:hint="@string/thongtinbosung"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="onGuiThongTin"
        android:text="@string/gui" />

</LinearLayout>